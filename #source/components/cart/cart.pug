    form.cart__form(action="#" method="post")
      // Товары
      .cart__items
        .cart__header
         |Товары в корзине
         span 
            | Очистить
            <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0.353516 0.353516L12.8535 12.8535" stroke="#1C1C1C" />
                <path d="M12.8535 0.353516L0.353515 12.8535" stroke="#1C1C1C" />
            </svg>    
        // Товар 1
        .cart-item
          .cart-item__image
            img(src="./assets/img/image 8.png" alt="Кубок Престижный металлический")
          .cart-item__info
            .cart-item__title Кубок Престижный<br>металлический
            .cart-item__code KM2767
            .cart-item__price
              span.cart-item__price-old 3 469 ₽
              span.cart-item__price-current 2 120 ₽
              span.cart-item__discount -15%
          .cart-item__qty
            button.cart-item__qty-btn(type="button" data-action="decrement") -
            input.cart-item__qty-input(type="number" value="10" min="1")
            button.cart-item__qty-btn(type="button" data-action="increment") +
          button.cart-item__remove(type="button" aria-label="Удалить товар") 
            <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0.353516 0.353516L12.8535 12.8535" stroke="#1C1C1C" />
                <path d="M12.8535 0.353516L0.353515 12.8535" stroke="#1C1C1C" />
            </svg>

        // Товар 2
        .cart-item
          .cart-item__image
            img(src="./assets/img/image 11 (1).png" alt="Приз с фигуркой 'Борьба'")
          .cart-item__info
            .cart-item__title Приз с фигуркой<br>“Борьба”
            .cart-item__code KM2767
            .cart-item__price
              span.cart-item__price-old 3 469 ₽
              span.cart-item__price-current 2 120 ₽
              span.cart-item__discount -15%
          .cart-item__qty
            button.cart-item__qty-btn(type="button" data-action="decrement") -
            input.cart-item__qty-input(type="number" value="10" min="1")
            button.cart-item__qty-btn(type="button" data-action="increment") +
          button.cart-item__remove(type="button" aria-label="Удалить товар") 
            <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0.353516 0.353516L12.8535 12.8535" stroke="#1C1C1C" />
                <path d="M12.8535 0.353516L0.353515 12.8535" stroke="#1C1C1C" />
            </svg>

      // Итог
      aside.cart__summary
        .cart-summary
          .cart-summary__total
            span.cart-summary__label ИТОГО:
            span.cart-summary__value 40 375 ₽
          ul.cart-summary__details
